extends layout.pug

block content
  p
    a(class="button" href="/books/new") Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.get("id")}`)= book.get("title")
          td= book.get("author")
          td= book.get("genre")
          td= book.get("year")

